    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="关于页面"
        android:textColor="#9900CC"
        android:textSize="20.0dip" />

    <TextView
        android:textColor="#9900CC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="应用名称：音乐音乐"
        android:textSize="20.0dip" />

    <TextView
        android:textColor="#9900CC"
        android:layout_width="wrap_content"
